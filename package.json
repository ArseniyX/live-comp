{
  "name": "react-preview",
  "displayName": "React State Preview",
  "description": "Preview React components in multiple states (loading, error, empty, success) without running the full app",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:typescriptreact",
    "onLanguage:javascriptreact"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "react-preview.previewComponent",
        "title": "Preview React Component States",
        "icon": "$(preview)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "react-preview.previewComponent",
          "when": "resourceExtname == .tsx || resourceExtname == .jsx",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "command": "react-preview.previewComponent",
          "when": "resourceExtname == .tsx || resourceExtname == .jsx",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "react-preview.previewComponent",
          "when": "resourceExtname == .tsx || resourceExtname == .jsx",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "esbuild": "^0.27.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
